{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/api-docs/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/webhook",
      "destination": "/server.js"
    },
    {
      "source": "/health",
      "destination": "/server.js"
    },
    {
      "source": "/thumbnail",
      "destination": "/server.js"
    },
    {
      "source": "/generate-thumbnail",
      "destination": "/server.js"
    },
    {
      "source": "/setup-webhook",
      "destination": "/server.js"
    },
    {
      "source": "/update-commands",
      "destination": "/server.js"
    }
  ],
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}
